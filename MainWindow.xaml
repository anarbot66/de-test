<Window x:Class="EkzamenWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EkzamenWPF"
        mc:Ignorable="d"
         Height="500" Width="800" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="21*"/>
            <ColumnDefinition Width="779*"/>
        </Grid.ColumnDefinitions>
        <Button Content="Зарегестрироваться" HorizontalAlignment="Left" Margin="315,326,0,0" VerticalAlignment="Top" Height="34" Width="125" Click="Button_Click" Background="#405C73" Foreground="White" Grid.Column="1" FontFamily="Constantia"/>
        <Button Content="Вход" HorizontalAlignment="Left" Margin="316,372,0,0" VerticalAlignment="Top" Height="36" Width="126" Click="Button_Click_1" Background="#BFD6F6" Grid.Column="1"/>
        <Label Content="Логин" HorizontalAlignment="Left" Margin="317,198,0,0" VerticalAlignment="Top" Grid.Column="1" FontFamily="Constantia"/>
        <Label Content="Пароль" HorizontalAlignment="Left" Margin="319,260,0,0" VerticalAlignment="Top" Grid.Column="1" FontFamily="Constantia"/>
        <TextBox x:Name="Login" HorizontalAlignment="Left" Margin="315,226,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Background="#BFD6F6" Grid.Column="1"/>
        <TextBox x:Name="Parol" HorizontalAlignment="Left" Margin="317,286,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="120" Background="#BFD6F6" Grid.Column="1"/>
        <Image HorizontalAlignment="Left" Height="98" Margin="327,37,0,0" VerticalAlignment="Top" Width="100" Grid.Column="1"/>
        <Label Content="Регистрация" HorizontalAlignment="Left" Margin="337,162,0,0" VerticalAlignment="Top" Grid.Column="1" FontFamily="Constantia"/>

    </Grid>
</Window>
